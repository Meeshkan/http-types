{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://meeshkan.com/http-request-response.json",
  "type": "object",
  "title": "HttpExchange",
  "description": "A HTTP request and response pair.",
  "required": [ "request" ],
  "properties": {
    "request": {
      "title": "HttpRequest",
      "description": "A HTTP request.",
      "type": "object",
      "required": ["protocol", "method", "headers", "host"],
      "properties": {
        "body": {
          "type": "string"
        },
        "protocol": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "method": {
          "type": "string",
          "enum": ["get", "put", "post", "patch", "delete", "options", "trace", "head", "connect"]
        },
        "headers": {
          "type": "object",
          "required": [],
          "additionalProperties": {
              "anyOf": [
                { "type": "string" },
                { "type": "array", "items": { "type": "string" } }
              ]
          }
        },
        "query": {
          "type": "object",
          "required": [],
          "additionalProperties": {
              "anyOf": [
                { "type": "string" },
                { "type": "array", "items": { "type": "string" } }
              ]
          }
        },
        "path": {
          "type": "string"
        },
        "pathname": {
          "type": "string"
        },
        "host": {
          "type": "string"
        }
      }
    },
    "response": {
      "title": "HttpResponse",
      "description": "A HTTP response.",
      "type": "object",
      "required": [],
      "properties": {
        "statusCode": {
          "type": "number"
        },
        "body": {
          "type": "string"
        },
        "headers": {
          "type": "object",
          "required": [],
          "additionalProperties": { "type": "string" }
        }
      }
    }
  }
}
